<script>
// Productos
const products = [
  {id:1,name:"Laptop Pro 14",category:"laptop",price:899,rating:4.7,img:"https://images.unsplash.com/photo-1587202372775-98927b7753a0?fit=crop&w=400&h=300",specs:["Intel Core i5","16GB RAM","512GB SSD","14\" FHD"]},
  {id:2,name:"Ultrabook Air 13",category:"laptop",price:749,rating:4.6,img:"https://images.unsplash.com/photo-1587202372800-3f25aa0ed9db?fit=crop&w=400&h=300",specs:["AMD Ryzen 5","8GB RAM","512GB SSD","13.3\" FHD"]},
  {id:3,name:"PC Gamer G1",category:"desktop",price:1299,rating:4.8,img:"https://images.unsplash.com/photo-1587202372799-2d74a7b3b9c7?fit=crop&w=400&h=300",specs:["Ryzen 7","RTX 4060","16GB RAM","1TB SSD"]},
  {id:4,name:"All-in-One 24",category:"desktop",price:699,rating:4.3,img:"https://images.unsplash.com/photo-1525547719571-a2d4ac8945e2?fit=crop&w=400&h=300",specs:["Intel Core i3","8GB RAM","256GB SSD","24\" FullHD"]},
  {id:5,name:"Mouse Gamer RGB",category:"accesorio",price:59,rating:4.5,img:"https://images.unsplash.com/photo-1615663245857-ac93bb7c39e7?fit=crop&w=400&h=300",specs:["RGB Lighting","16000 DPI","6 Botones"]},
  {id:6,name:"Teclado MecÃ¡nico",category:"accesorio",price:89,rating:4.6,img:"https://images.unsplash.com/photo-1517336714731-489689fd1ca8?fit=crop&w=400&h=300",specs:["Switch Blue","RGB","Compacto"]},
  {id:7,name:"Laptop Creator 16",category:"laptop",price:1149,rating:4.7,img:"https://images.unsplash.com/photo-1587202372765-0f2a6e5f4a2b?fit=crop&w=400&h=300",specs:["Core i7","32GB RAM","1TB SSD","16\" QHD"]},
  {id:8,name:"Monitor UltraWide",category:"accesorio",price:399,rating:4.4,img:"https://images.unsplash.com/photo-1517336714731-489689fd1ca8?fit=crop&w=400&h=300",specs:["34\" UWQHD","144Hz","HDR10"]}
];

// Renderizar productos
function renderProducts(){
  const grid = document.getElementById("grid");
  grid.innerHTML="";
  const q=document.getElementById("q").value.toLowerCase();
  const cat=document.querySelector(".chip.active").dataset.cat;
  let list=products.filter(p=>(cat==="todos"||p.category===cat) && p.name.toLowerCase().includes(q));
  const sort=document.getElementById("sort").value;
  if(sort==="precio-asc") list.sort((a,b)=>a.price-b.price);
  if(sort==="precio-desc") list.sort((a,b)=>b.price-a.price);
  if(sort==="rating-desc") list.sort((a,b)=>b.rating-b.rating);
  list.forEach(p=>{
    const card=document.createElement("div");
    card.className="card";
    card.innerHTML=`
      <img class="thumb" src="${p.img}" alt="${p.name}">
      <div class="content">
        <div class="title">${p.name}</div>
        <div class="specs">${p.specs.join(" â€¢ ")}</div>
        <div class="price-row"><div class="price">$${p.price}</div><div class="rating">â˜… ${p.rating}</div></div>
        <button class="add" onclick="addToCart(${p.id})">Agregar</button>
      </div>`;
    grid.appendChild(card);
  });
}

// Carrito
let cart=[];
function addToCart(id){cart.push(products.find(p=>p.id===id)); showToast("Agregado al carrito"); updateCart();}
function updateCart(){
  const items=document.getElementById("cartItems");
  items.innerHTML="";
  let total=0;
  cart.forEach((p,i)=>{total+=p.price; items.innerHTML+=`<div class="cart-item"><div>${p.name} - $${p.price}</div><button onclick="removeFromCart(${i})">X</button></div>`;});
  document.getElementById("cartTotal").innerText="$"+total.toFixed(2);
  document.getElementById("cartCount").innerText=cart.length;
}
function removeFromCart(i){cart.splice(i,1); updateCart();}
function emptyCart(){cart=[]; updateCart();}
function showToast(msg){const t=document.getElementById("toast"); t.innerText=msg; t.classList.add("show"); setTimeout(()=>t.classList.remove("show"),2000);}

// Eventos
document.getElementById("q").oninput=renderProducts;
document.querySelectorAll(".chip").forEach(c=>c.onclick=()=>{document.querySelectorAll(".chip").forEach(x=>x.classList.remove("active")); c.classList.add("active"); renderProducts();});
document.getElementById("sort").onchange=renderProducts;
document.getElementById("cartToggleBtn").onclick=()=>document.getElementById("cartSidebar").classList.add("active");
document.getElementById("closeCartBtn").onclick=()=>document.getElementById("cartSidebar").classList.remove("active");
document.getElementById("emptyCartBtn").onclick=emptyCart;
document.getElementById("checkoutBtn").onclick=()=>{alert("Compra realizada! Gracias por confiar en TechMarket"); emptyCart(); document.getElementById("cartSidebar").classList.remove("active");};

// AÃ±o
document.getElementById("year").innerText=new Date().getFullYear();

// Inicial
renderProducts();
</script>

